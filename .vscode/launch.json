    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run Execute",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "execute",
                "-n",
                "demo",
                "-l",
                "/home/stanwar"
            ]
        },

        {
            "name": "Run List",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "list",
                "-k",
                "k8s demo elk",
                "-t"
                ]
        },
        {
            "name": "Run Fork",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "fork",
                "-n",
                "exemplar-demo"
                ]
        }
    ]
}